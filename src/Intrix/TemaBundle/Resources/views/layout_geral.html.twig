{# src/Intrix/TemaBundle/Resources/views/layout.html.twig #}
<html xmlns="http://www.w3.org/1999/xhtml">
    {% include 'TemaBundle::header.html.twig' %}
    <body>
        <!-- Top navigation bar -->
        {% include 'TemaBundle::top_navegacao.html.twig' %}

        {% include 'TemaBundle::top_atalhos.html.twig' %}

        <div class="wrapper">
            <!-- Left navigation -->
            {% include 'TemaBundle::left_navegacao.html.twig' %}

            <div class="content">
